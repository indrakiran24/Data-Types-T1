<script>
        
        let units=parseInt(prompt("enter the units of electricity"))
        if(units<=50){
            a=units*2
            b=(a*20)/100
            document.write(b+a)
        }else if(units>=51 && units<=150){
            c=(50*2)+((units-50)*3)
            d=(c*20)/100
            document.write(d+c)
        }else if(units>=151 && units<=250){
            e=(50*2)+((100*3))+((units-150)*5)
            f=(e*20)/100
            document.write(f+e)
        }else if(units>=251){
            g=(units*2)+((100*3))+((100*5))+((units-250)*8)
            h=(g*20)/100
            document.write(h+g)
        }
        else{
            document.write("invalid units")
        }
    </script>

    
